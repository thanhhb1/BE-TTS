{
	"swagger": "2.0",
	"info": {
		"version": "1.0.0",
		"title": "REST API",
		"description": ""
	},
	"host": "localhost:8000/api",
	"basePath": "/",
	"schemes": [
		"http"
	],
	"paths": {
		"/users/": {
			"get": {
				"summary": "Lấy danh sách người dùng",
				"responses": {
					"200": {
						"description": "Danh sách người dùng"
					}
				}
			},
			"post": {
				"summary": "Tạo người dùng mới",
				"requestBody": {
					"required": true,
					"content": {
						"application/json": {
							"schema": {
								"type": "object",
								"properties": {
									"email": {
										"type": "string",
										"example": "user@example.com"
									},
									"password": {
										"type": "string",
										"example": "123456"
									}
								},
								"required": [
									"email",
									"password"
								]
							}
						}
					}
				},
				"responses": {
					"201": {
						"description": "Tạo người dùng thành công"
					}
				}
			}
		},
		"/users/{id}/hide": {
			"patch": {
				"summary": "Ẩn người dùng (xóa mềm)",
				"parameters": [
					{
						"name": "id",
						"in": "path",
						"required": true,
						"schema": {
							"type": "string"
						}
					}
				],
				"responses": {
					"200": {
						"description": "Ẩn người dùng thành công"
					}
				}
			}
		},
		"/users/{id}/unhide": {
			"patch": {
				"summary": "Bỏ ẩn người dùng",
				"parameters": [
					{
						"name": "id",
						"in": "path",
						"required": true,
						"schema": {
							"type": "string"
						}
					}
				],
				"responses": {
					"200": {
						"description": "Bỏ ẩn người dùng thành công"
					}
				}
			}
		},
		"/categories/": {
			"get": {
				"summary": "Lấy danh sách danh mục",
				"responses": {
					"200": {
						"description": "Danh sách danh mục"
					}
				}
			},
			"post": {
				"summary": "Tạo danh mục mới",
				"requestBody": {
					"required": true,
					"content": {
						"application/json": {
							"schema": {
								"type": "object",
								"properties": {
									"title": {
										"type": "string",
										"example": "Danh mục mới"
									}
								},
								"required": [
									"title"
								]
							}
						}
					}
				},
				"responses": {
					"201": {
						"description": "Tạo danh mục thành công"
					}
				}
			}
		},
		"/categories/{id}": {
			"get": {
				"summary": "Lấy chi tiết danh mục theo ID",
				"parameters": [
					{
						"name": "id",
						"in": "path",
						"required": true,
						"schema": {
							"type": "string"
						}
					}
				],
				"responses": {
					"200": {
						"description": "Chi tiết danh mục"
					}
				}
			},
			"put": {
				"summary": "Cập nhật danh mục theo ID",
				"parameters": [
					{
						"name": "id",
						"in": "path",
						"required": true,
						"schema": {
							"type": "string"
						}
					}
				],
				"requestBody": {
					"required": true,
					"content": {
						"application/json": {
							"schema": {
								"type": "object",
								"properties": {
									"title": {
										"type": "string",
										"example": "Danh mục cập nhật"
									}
								},
								"required": [
									"title"
								]
							}
						}
					}
				},
				"responses": {
					"200": {
						"description": "Cập nhật danh mục thành công"
					}
				}
			},
			"delete": {
				"summary": "Xóa mềm danh mục theo ID",
				"parameters": [
					{
						"name": "id",
						"in": "path",
						"required": true,
						"schema": {
							"type": "string"
						}
					}
				],
				"responses": {
					"200": {
						"description": "Xóa mềm danh mục thành công"
					}
				}
			}
		},
		"/categories/restore/{id}": {
			"patch": {
				"summary": "Khôi phục danh mục đã xóa mềm",
				"parameters": [
					{
						"name": "id",
						"in": "path",
						"required": true,
						"schema": {
							"type": "string"
						}
					}
				],
				"responses": {
					"200": {
						"description": "Khôi phục danh mục thành công"
					}
				}
			}
		},
		"/categories/forcedelete/{id}": {
			"delete": {
				"summary": "Xóa cứng danh mục theo ID",
				"parameters": [
					{
						"name": "id",
						"in": "path",
						"required": true,
						"schema": {
							"type": "string"
						}
					}
				],
				"responses": {
					"200": {
						"description": "Xóa cứng danh mục thành công"
					}
				}
			}
		}
	}
}